<workflow-app name="simple-Workflow"
	xmlns="uri:oozie:workflow:0.5">
	<start to="external_table_exists"/>
	<decision name="external_table_exists">
		<switch>
			<case to="Create_External_Table">${fs:exists('/user/maria_dev/vendas') eq 'false'}</case>
			<default to="orc_table_exists"/>
		</switch>
	</decision>
	<decision name="orc_table_exists">
		<switch>
			<case to="Create_orc_Table">${fs:exists('/apps/hive/warehouse/sfo_weather') eq 'false'}</case>
			<default to="Insert_into_Table"/>
		</switch>
	</decision>
	<action name="Insert_into_Table">
		<hive
			xmlns="uri:oozie:hive-action:0.6">
			<job-tracker>${resourceManager}</job-tracker>
			<name-node>${nameNode}</name-node>
			<script>/user/maria_dev/app/insert.hive</script>
		</hive>
		<ok to="end"/>
		<error to="kill_job"/>
	</action>
	<action name="Create_orc_Table">
		<hive
			xmlns="uri:oozie:hive-action:0.6">
			<job-tracker>${resourceManager}</job-tracker>
			<name-node>${nameNode}</name-node>
			<script>/user/maria_dev/app/orc.hive</script>
		</hive>
		<ok to="Insert_into_Table"/>
		<error to="kill_job"/>
	</action>
	<action name="Create_External_Table">
		<hive
			xmlns="uri:oozie:hive-action:0.6">
			<job-tracker>${resourceManager}</job-tracker>
			<name-node>${nameNode}</name-node>
			<script>/user/maria_dev/app/external.hive</script>
		</hive>
		<ok to="orc_table_exists"/>
		<error to="kill_job"/>
	</action>
	<kill name="kill_job">
		<message>Job failed</message>
	</kill>
	<end name="end"/>
</workflow-app>

